<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/notify_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/title_notify"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/tab_bg_selector"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back_notify"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:text="@string/door_notify"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/tab_bg_unselected"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_inout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/tab_bg_selector"
                android:gravity="center"
                android:singleLine="false"
                android:src="@drawable/tab_bg_selector"
                android:text="@string/door_inout"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ind_inout"
                android:layout_width="match_parent"
                android:layout_height="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/light_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_record"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/tab_bg_selector"
                android:gravity="center"
                android:src="@drawable/tab_bg_selector"
                android:text="@string/door_record"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ind_doorrecord"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </LinearLayout>
</LinearLayout>