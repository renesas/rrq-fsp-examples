<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/back">

    <ImageView
        android:id="@+id/temperatureImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_temp" />

    <!--<lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/temperatureChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->

    <TextView
        android:id="@+id/temperatureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sensor_text_margin"
        android:text="@string/label_temperature"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/temperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/sensor_text_margin"
        android:text="@string/value_not_available"
        android:textColor="@color/text"
        android:textStyle="bold" />

</RelativeLayout>
